<div class="mx-auto w-1/2">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field text-sky-900 mb-4">
      <%= f.label :name %><br/>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-full rounded"  %>
    </div>

    <div class="field text-sky-900 mb-4">
      <%= f.label :email %><br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full rounded"  %>
    </div>

    <div class="field text-sky-900 mb-4">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>
          characters minimum)</em>
      <% end %><br/>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full rounded"  %>
    </div>

    <div class="field text-sky-900 mb-4">
      <%= f.label :password_confirmation %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded"  %>
    </div>

      <div
        class="
          actions mb-4 bg-sky-700 text-gray-50 text-center px-10 py-4 rounded-lg w-1/4
          mx-auto
        "
      >
      <%= f.submit "Sign up"%>
    </div>
  <% end %>
</div>

<%= render "users/shared/links" %>
