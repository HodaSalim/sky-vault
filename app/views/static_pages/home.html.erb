<div>
  <h1 class="font-bold text-4xl">StaticPages#home</h1>
  <% if user_signed_in? %>
    <button
      data-modal-target="create-workspace-modal"
      data-modal-toggle="create-workspace-modal"
      class="
        block text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none
        focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center
        dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800
      "
      type="button"
    >
      Add a workspace
    </button>
    <ul>
      <% current_user.workspaces.each do |workspace| %>
        <li>
          <strong>Name:</strong> <%= workspace.name %>
          <%= button_to "delete", workspace_path(workspace.id), method: :delete %>  
        </li>

      <% end %>
      <h3>New Workspace</h3>
      <%= form_with(model: Workspace.new) do |f| %>
        <div class="field">
          <%= f.text_field :name, placeholder: "Workspace name..." %>
        </div>
        <div class="field">
          <%= f.label :is_shared, "Make this workspace public" %>
          <%= f.check_box :is_shared %>
        </div>
        <%= f.submit "Create" %>
      <% end %>
          <!--<li>-->
        <!--  <strong>Workspace ID:</strong>-->
        <!--  <br>-->
        <!--  <strong>Is Shared:</strong>-->
        <!--  <br>-->
        <!--  <strong>Created At:</strong>-->
        <!--  <br>-->
        <!--</li>-->
  <% else %>
    <p>You are not signed in yet</p>
  <% end %>
</div>
